<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Sanity Test" verbose="1" >
    <groups>
        <run>
            <include name="sanity"></include>
        </run>
    </groups>
    <listeners>
        <listener class-name="Com.tutorialsninja.customlisteners.CustomListeners"/>
        <listener class-name="org.uncommons.reportng.HTMLReporter"/>
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter"/>
    </listeners>
    <test name="Sanity Test" >
        <classes>
            <class name="Com.tutorialsninja.testsuite.DesktopsTest"></class>
            <class name="Com.tutorialsninja.testsuite.LaptopsAndNotebooksTest"></class>
            <class name="Com.tutorialsninja.testsuite.MyAccountTest"></class>
            <class name="Com.tutorialsninja.testsuite.TopMenuTest"></class>
        </classes>
    </test>
</suite>